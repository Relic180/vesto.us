<div class="candidate-profile-builder">

    <div class="profile-builder-header">
        <h2 data-js="question"></h2>
    </div>

    <div class="profile-builder-input" data-js="user-input"></div>

    <div class="profile-builder-action">

        <span class="profile-builder-cta" data-js="cta">You're almost ready for offers</span>
        <a class="btn btn-cta profile-builder-next" data-js="action">Next</a>
        <a class="btn btn-ghost profile-builder-skip" data-js="skip">Skip</a>

        <div class="profile-builder-progress" data-js="progress">
            {{~ it.questions :question:index}}
                <i class="icon icon-circle-o{{? question.current}} is-current{{? }}" data-index="{{=index}}"></i>
            {{~ }}
        </div>

    </div>

</div>
