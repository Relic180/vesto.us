<div class="component-roadmap {{=it.colorScheme}}">

    <h4>Here's the plan:</h4>

    <ol class="component-roadmap-list">
        {{~ it.steps :step}}
            <li{{? step.current}} class="is-current"{{? }}>{{=step.label}}</li>
        {{~ }}
    </ol>

    <div class="component-roadmap-action">
        <a class="btn btn-large {{=it.actionClass}}"{{? it.actionDisabled}} disabled{{? }} data-js="action">{{=it.actionLabel}}</a>
    </div>

</div>
