<div class="page-home-container" data-js="hero">

    <div class="page-home-background"></div>

    <div class="page-home-title" data-js="title">
        <h1 class="page-home-title-headline">Find the best.</h1>
        <h3 class="page-home-title-tagline">Connect with active & qualified candidates.</h3>
    </div>

    <div class="page-home-entry">

        <div class="page-home-entry-tabs">
            <div class="home-entry-tab" data-js="candidate">
                <span>TALENT</span>
            </div>
            <div class="home-entry-tab is-active" data-js="employer">
                <span>EMPLOYER</span>
            </div>
        </div>

        <div class="page-home-entry-form">

            <h4 class="entry-form-title" data-js="form-title">I'm talented!</h4>

            <div class="entry-auth-row">

                <div class="btn-auth-social auth-google" data-js="google">
                    <span class="span-shadow span-google-shadow">
                        <i class="icon icon-google">G</i>
                    </span>
                    <span class="btn-auth-label">Google</span>
                </div>

                <div class="btn-auth-social auth-facebook" data-js="facebook">
                    <span class="span-shadow span-facebook-shadow">
                        <i class="icon icon-facebook">f</i>
                    </span>
                    <span class="btn-auth-label">Facebook</span>
                </div>

            </div>

            <div class="entry-form-separator">
                <label>or</label>
            </div>

            <input class="auth-input" type="text" placeholder="Work email address" data-js="email" />

            <a class="btn btn-dark entry-form-submit" data-js="signup">Hire Talent</a>

            <div class="page-home-terms">
                By signing up you agree to Recruiter.AI's <a data-js="tos">Terms of Service</a> and <a data-js="privacy">Privacy Policy</a>
            </div>

            <a class="page-home-login" data-navigate="/login">I already have an account</a>

        </div>

    </div>

</div>
