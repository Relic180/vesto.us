<div class="page-login-container" data-js="hero">

    <div class="page-login-background"></div>

    <div class="page-login-entry">

        <div class="page-login-entry-header">
            <span>Welcome back!</span>
        </div>

        <div class="page-login-entry-form">

            <div class="entry-auth-row">

                <div class="btn-auth-social auth-google" data-js="google">
                    <span class="span-shadow span-google-shadow">
                        <i class="icon icon-google">G</i>
                    </span>
                    <span class="btn-auth-label">Google</span>
                </div>

                <div class="btn-auth-social auth-facebook" data-js="facebook">
                    <span class="span-shadow span-facebook-shadow">
                        <i class="icon icon-facebook">f</i>
                    </span>
                    <span class="btn-auth-label">Facebook</span>
                </div>

            </div>

            <div class="entry-form-separator">
                <label>or</label>
            </div>

            <div class="entry-form-input">

                <input id="email" class="auth-input" type="text" placeholder="Email address" data-js="email" />
                <input id="password" class="auth-input" type="password" placeholder="Password" data-js="password">
                <i class="icon icon-eye show-password" data-js="show-password">(O)</i> /*remove characters once icon library added*/

                <div class="page-login-forgot">
                    <a data-js="forgot">Forgot password?</a>
                </div>

            </div>

            <a class="btn btn-dark entry-form-submit" data-js="login">Login</a>
            <a class="page-login-signup" data-navigate="/home">Id like to create an account</a>

        </div>

    </div>

</div>
