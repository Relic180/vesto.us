<div class="page-candidate-profile">

    <div class="candidate-profile-alert is-hidden" data-js="alert">
        Verification email sent to your inbox
        <span class="hide-alert">X</span>
    </div>

    <div class="candidate-profile-column-info">

        <div class="candidate-profile-edit">

            <h1>Create your profile</h1>
            <h2>Companies will review this information and apply to you!</h2>

            <div class="candidate-profile-top">

                <div class="candidate-profile-photo-upload" data-js="photo-profile">

                    <div class="photo-upload-hint">
                        <i class="icon icon-camera"></i>
                        <span>Upload Profile Image</span>
                    </div>

                </div>

                <div class="candidate-profile-basics">

                    <div class="candidate-profile-name">
                        <label for="first">What's your name?</label>
                        <input id="first" class="profile-input" type="text" placeholder="First Name" />
                        <input id="last" class="profile-input" type="text" placeholder="Last Name" />
                    </div>

                    <label for="city">Where do you live?</label>
                    <input id="city" class="profile-input profile-input-med" type="text" placeholder="City" />

                </div>

            </div>

            <div class="candidate-profile-summary">

                <h2 class="candidate-profile-section-header">Summary</h2>

                <div class="profile-form-row">
                    <textarea class="profile-textarea-full" rows="4" cols="1" placeholder="Briefly describe yourself and experience" resize="vertical" data-js="summary"></textarea>
                </div>

            </div>

            <div class="candidate-profile-work" data-js="work">

                <h2 class="candidate-profile-section-header">Work</h2>

                <form class="candidate-profile-form">

                    <div class="candidate-profile-work-details">

                        <div class="profile-form-row">
                            <input class="profile-input" type="text" placeholder="Job Title" />
                            <input class="profile-input" type="text" placeholder="Company Name" />
                            <input class="profile-input input-month" type="text" placeholder="Start Month" />
                            <input class="profile-input input-year" type="text" placeholder="Year" />
                            <span class="range-separator">to</span>
                            <input class="profile-input input-month" type="text" placeholder="End Month" />
                            <input class="profile-input input-year" type="text" placeholder="Year" />
                        </div>

                    </div>

                    <div class="profile-form-row">

                        <div class="candidate-profile-section-photo" data-js="photo-work">

                            <div class="photo-upload-hint">
                                <i class="icon icon-camera"></i>
                                <span>Upload Logo</span>
                            </div>

                        </div>

                        <textarea class="profile-textarea-full" rows="4" cols="1" placeholder="Describe your role" resize="vertical"></textarea>

                    </div>

                    <div class="form-submit">
                        <a class="btn btn-small btn-gray" data-js="add-work">Add</a>
                    </div>

                </form>

            </div>

            <div class="candidate-profile-education" data-js="education">

                <h2 class="candidate-profile-section-header">Education</h2>

                <form class="candidate-profile-form">

                    <div class="candidate-profile-section-photo" data-js="photo-education">

                        <div class="photo-upload-hint">
                            <i class="icon icon-camera"></i>
                            <span>Upload Logo</span>
                        </div>

                    </div>

                    <div class="candidate-profile-education-details">

                        <div class="profile-form-row">
                            <input class="profile-input input-full" type="text" placeholder="Institution" />
                        </div>

                        <div class="profile-form-row">
                            <input class="profile-input" type="text" placeholder="Degree Type" />
                            <input class="profile-input" type="text" placeholder="Subject" />
                        </div>

                        <div class="profile-form-row">
                            <input class="profile-input input-month" type="text" placeholder="Start Month" />
                            <input class="profile-input input-year" type="text" placeholder="Year" />
                            <span class="range-separator">to</span>
                            <input class="profile-input input-month" type="text" placeholder="End Month" />
                            <input class="profile-input input-year" type="text" placeholder="Year" />
                        </div>

                        <div class="form-submit education-submit">
                            <a class="btn btn-small btn-gray" data-js="add-education">Add</a>
                        </div>

                    </div>

                </form>

            </div>

            <div class="candidate-profile-skills">

                <h2 class="candidate-profile-section-header">Skills</h2>
                <input class="profile-input" type="text" placeholder="Type to add skill" data-js="add-skill">
                <div class="profile-skills-added"></div>
                <div class="profile-form-row row-separator"></div>

                <div class="candidate-profile-skills-recommended" data-js="rec-skills">
                    <span class="profile-skills-recommended-label">Recommended skills for you:</span>
                </div>

            </div>

        </div>

    </div>

    <div class="candidate-profile-column-overview">

        <div class="candidate-profile-aside" data-js="roadmap"></div>

        <div class="candidate-profile-aside">

            <div class="profile-import-hint">
                PS: You can save time by importing your resume.
            </div>

            <div class="profile-import-options">
                <a class="btn btn-dark" data-js="import">Import PDF</a>
                <a class="btn btn-dark" data-js="take">
                    <i class="icon icon-camera"></i>
                    Take photo of resume
                </a>
            </div>

        </div>

        <div class="candidate-profile-links">

            <h4>Links</h4>

            <div class="profile-link-row">
                <div class="profile-link-icon"></div>
                <input class="profile-input" type="text" />
            </div>

            <div class="profile-link-row">
                <div class="profile-link-icon"></div>
                <input class="profile-input" type="text" />
            </div>

            <div class="profile-link-row">
                <div class="profile-link-icon"></div>
                <input class="profile-input" type="text" />
            </div>

        </div>

    </div>

</div>
