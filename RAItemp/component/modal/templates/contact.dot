<div class="modal-header-contact">
    <h3 class="modal-title">{{? it.title}}{{=it.title}}{{?? }}Send a message{{? }}</h3>
    <i class="icon icon-x" data-js="modal-close"></i>
</div>

<div class="modal-content-contact">

    <form data-js="contact-form">
        <div class="contact-form-item-firstname" data-extended="text" data-js="input first-name" data-label="First Name" data-options="underline align-left required"></div>
        <div class="contact-form-item-lastname" data-extended="text" data-js="input last-name" data-label="Last Name" data-options="underline align-left required"></div>
        <div class="contact-form-item-email" data-extended="email" data-js="input email" data-label="Email Address" data-options="underline align-left required"></div>
        <div class="contact-form-item-message" data-extended="text" data-js="input message" data-label="Write a message" data-options="overline align-left required multiline" min-length="10" error-name="Your message"></div>
    </form>

    <div class="contact-buttons">
        <button class="btn btn-ghost" data-js="modal-close">Cancel</button>
        <button class="btn btn-submit" data-js="submit">Send Now</button>
    </div>

</div>
