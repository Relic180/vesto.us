<div class="message-simple-inner {{=it.mode}}">

    <i class="message-simple-close icon icon-x" data-js="close"></i>

    {{? it.icon}}
        <i class="message-simple-icon icon icon-{{=it.icon}}"></i>
    {{?? it.mode === 'error' || it.mode === 'success' }}
        <i class="message-simple-icon icon icon-{{? it.mode === 'error'}}notice-circle-o{{?? }}bulb{{? }}"></i>
    {{? }}

    <div class="message-simple-content">

        {{? it.title}}
            <h3 class="message-simple-title">{{=it.title}}</h3>
        {{? }}

        <p class="message-simple-copy">{{=it.msg}}</p>

    </div>

</div>
